        <div>
            @Html.LabelFor(m => m.urun)
            @Html.TextBoxFor(m => m.urun, new { @class = "form-control", @required = "" })
        </div>
        <div>
            @Html.LabelFor(m => m.musteri)
            @Html.TextBoxFor(m => m.musteri, new{ @class = "form-control", @required = "" })
        </div>
        <div>
            @Html.LabelFor(m => m.adet)
            @Html.TextBoxFor(m => m.adet, new { @class = "form-control", @required = "" })
        </div>
        <div>
            @Html.LabelFor(m => m.fiyat)
            @Html.TextBoxFor(m => m.fiyat, new { @class = "form-control", @required = "" })
        </div>
             <br />
        <div>
            <button class="btn btn-group">GÜNCELLE</button>
        </div>
    </body>
}


