@model mvcStok._1.Models.Entity.tblSatis

@{
    ViewBag.Title = "guncelle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("gnc", "satislar", FormMethod.Post))
{
    <body>
        <div>
            @Html.LabelFor(m => m.satisid)
